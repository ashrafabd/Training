<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href='/public/css/bootstrap.min.css' type="text/css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>
        <%= pageTitle %>
    </title>
</head>

<body id="page-top" class="min-vh-100 d-flex flex-column">

    <%- include('partials/navbar.ejs') %>
    
    <div class="row g-4 p-3">
        <% res_results.forEach((item)=>{ %>
                <div class="col-md-6 col-lg-4">
                    <div class="card bg-primary bg-opacity-10">
                      <div class="card-body text-center">
                        <h3 class="card-title mb-3"><%= item.name %></h3>
                        <p class="card-text">
                          <img src="<%= img_urls[item.name] %>" alt="" width="100">
                        </p>
                        <a href="/details?name=<%= item.name%>" class="btn btn-dark">see more</a>
                      </div>
                    </div>
                </div> 
        <% }) %>
    </div>


    <%- include('partials/footer.ejs') %>


    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>